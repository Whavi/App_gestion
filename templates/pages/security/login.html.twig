{% extends "layouts/disconnected/base.html.twig" %}

{% block title %} Connexion - SIF {% endblock %}

{% block body %}
<div class="container">
	<h1 class="mt-4">Formulaire de connnexion</h1>
{% if error %}
<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form  method="post">
	<div class="form-group">
		<label for="username" class="form-label mt-4">Adresse email</label>
		<input type="email" class="form-control" id="username" name="_username" placeholder="exemple@secours-islamique.org" value="{{ last_username }}">
		<small id="emailHelp" class="form-text text-muted">Ne partagez jamais votre email Ã  quelqu'un d'autre.</small>
	</div>
	<div class="form-group">
		<label for="password" class="form-label mt-4">Mot de passe</label>
		<input type="password" class="form-control" id="password" name="_password" placeholder="********">
	</div>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
	<button type="submit" class="btn btn-primary mt-4"> Se connecter </button>
</form>

{% endblock %}



